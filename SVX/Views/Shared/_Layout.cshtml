@{
    Response.Cache.SetCacheability(HttpCacheability.ServerAndNoCache);
    Response.Cache.SetAllowResponseInBrowserHistory(false);
    Response.Cache.SetNoStore();
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/assets/")
    @Scripts.Render("~/bundles/mensaje")
    @Scripts.Render("~/bundles/jqueryVal")
    <script type="text/javascript">
        $(window).on("load", function () {
            $(".loader").fadeOut(1500);
        });
    </script>
</head>
<body class="hold-transition skin-blue-light sidebar-mini">
    <div class="loader"></div>
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/" class="logo">
                <!-- mini logo -->
                <b class="logo-mini">
                    <span class="light-logo"><img src="../../../images/logo-svx.svg" alt="logo" class="w-60 h-60"></span>
                </b>
                <!-- logo-->
                <span class="logo-lg">
                    <span style="color: white" class="font-weight-bold">SVX</span>
                </span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <div>
                    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>


                </div>


                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">

                        <li class="search-box">
                            <a class="nav-link hidden-sm-down" href="javascript:void(0)"><i class="mdi mdi-magnify"></i></a>
                            <form class="app-search" style="display: none;" action="/Home/Index">
                                <input type="text" class="form-control" placeholder="Buscar anuncio ..." name="filtro" id="filtro"> <a class="srh-btn"><i class="ti-close"></i></a>
                            </form>
                        </li>
                        @{
                            SVX.Models.Usuario us = (SVX.Models.Usuario)Session["Usuario"];
                            if (us != null)
                            {

                                <!-- User Account-->
                                <li class="dropdown user user-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <div class="text-center rounded-circle text-white bg-dark" style="width:40px; height:40px;">
                                            <h1>@us.nombre.Substring(0, 1)</h1>

                                        </div>
                                    </a>
                                    <ul class="dropdown-menu scale-up">
                                        <!-- User image -->
                                        <li class=" d-flex flex-row">
                                            <div class="text-center  rounded-circle text-white bg-dark" style="width:118px; height:68px;">
                                                <h1>@us.nombre.Substring(0, 1)</h1>

                                            </div>
                                            <p style="margin-left:10px;">
                                                @us.nombre @us.apellido
                                                <small class="mb-5">@us.email</small>
                                                <a href="/Home/MiPerfil" class="btn btn-danger btn-sm btn-rounded">View Profile</a>
                                            </p>
                                        </li>
                                        <!-- Menu Body -->
                                        <li class="user-body">
                                            <div class="row no-gutters">
                                                <div class="col-12 text-left">
                                                    <a href="/Home/MiPerfil"><i class="ion ion-person"></i>Mi perfil</a>
                                                </div>
                                                <div class="col-12 text-left">
                                                    <a href="/Home/Chat/0/0"><i class="ion ion-email-unread"></i> Inbox</a>
                                                </div>
                                                <div class="col-12 text-left">
                                                    <a href="/Home/MisAnuncios"><i class="ion ion-settings"></i> Mis anuncios</a>
                                                </div>

                                                <div role="separator" class="divider col-12"></div>
                                                <div class="col-12 text-left">
                                                    <a href="/Home/CerrarSession"><i class="fa fa-power-off"></i> Logout</a>
                                                </div>
                                            </div>
                                            <!-- /.row -->
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="/Home/Login" class="btn btn-outline m-2"><i class="ion ion-log-in"></i> Iniciar Sesión </a>
                                </li>

                            }

                        }

                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-cog fa-spin"></i></a>
                        </li>
                    </ul>
                </div>


            </nav>
        </header>
  
        @{
            Html.RenderAction("RenderCategories", "Home");
        }
        <div class="content-wrapper">

            @RenderBody()

        </div>

        <footer class="main-footer bg-transparent text-dark text-center no-border">
            Copyright © 2021 <a href="/" class="text-warning font-weight-bold"> SVX </a>. Todos los derechos reservados.
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-light">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
        
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane" id="control-sidebar-home-tab">
                  
               
               

                </div>
                <!-- /.tab-pane -->
               
            </div>
        </aside>
        </div>
        <!-- /.control-sidebar -->
        @Scripts.Render("~/bundles/Scripts")
        @Scripts.Render("~/bundles/steper")
        @RenderSection("scripts", required: false)
        <script>
            // chat app scrolling

            $('#chat-app, #chat-contact').slimScroll({
                height: '600px'
            });

            $('.telefono').inputmask("(503)9999-9999");

        </script>


</body>
</html>
